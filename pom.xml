            <artifactId>ulid-creator</artifactId>
            <version>5.2.3</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>3.0.0-beta3</version>
            <scope>compile</scope>
        </dependency>

